<LinearLayout
    android:background="#EFEAE9"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/dialog_title"
        android:layout_height="56dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:text="회원가입"
        android:textColor="#916C63"
        android:textSize="20dp" />

    <LinearLayout
        android:background="#d7ccc8"
        android:layout_height="2dp"
        android:layout_width="match_parent" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="이름 입력"
        android:id="@+id/register_name"
        android:inputType="textNoSuggestions"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#8d6e63"
        android:textCursorDrawable="@null"
        app:et_dividerColor="#8d6e63"
        app:et_labelPadding="5dp"
        app:met_baseColor="#8d6e63"
        app:met_errorColor="#FF282C"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="아이디 입력"
        android:id="@+id/register_id"
        android:inputType="textNoSuggestions"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#8d6e63"
        android:textCursorDrawable="@null"
        app:et_dividerColor="#8d6e63"
        app:et_labelPadding="5dp"
        app:met_baseColor="#8d6e63"
        app:met_errorColor="#FF282C"
        app:met_primaryColor="#a1887f" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="비밀번호 입력"
        android:id="@+id/register_pw"
        android:inputType="textNoSuggestions|textPassword"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#8d6e63"
        android:textCursorDrawable="@null"
        app:et_dividerColor="#8d6e63"
        app:et_labelPadding="5dp"
        app:met_baseColor="#8d6e63"
        app:met_errorColor="#FF282C"
        app:met_primaryColor="#a1887f" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent">

        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:background="@android:color/transparent"
            android:id="@+id/confirm_button"
            android:layout_alignParentEnd="true"
            android:layout_height="30dp"
            android:layout_width="70dp"
            android:text="가입하기"
            android:textColor="#6d4c41"
            android:textSize="16dp" />

        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:background="@android:color/transparent"
            android:id="@+id/cancel_button"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/confirm_button"
            android:layout_width="70dp"
            android:text="취소"
            android:textColor="#8d6e63"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>